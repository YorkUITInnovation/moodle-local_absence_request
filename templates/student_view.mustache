{{!
    Template for student absence report view
}}
<div class="row mb-4">
    <div class="col-12">
        <p class="text-muted">{{#str}}
            academic_year, local_absence_request{{/str}}: {{academic_year}} | {{#str}}
            student, local_absence_request{{/str}}: {{student_name}}</p>
    </div>
</div>

{{#has_requests}}
    {{#terms}}
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="mb-0">{{name}}</h3>
            </div>
            <div class="card-body">
                {{#has_requests}}
                    {{#requests}}
                        <div class="absence-request mb-4 p-3 border rounded">
                            <div class="row">
                                <div class="col-md-12">
                                    <h5 class="mb-2">{{#str}}absence_request, local_absence_request{{/str}}</h5>
                                    <div class="mb-2">
                                        <strong>{{#str}}
                                            circumstance, local_absence_request{{/str}}:</strong> {{circumstance}}
                                    </div>
                                    <div class="mb-2">
                                        <strong>{{#str}}
                                            absence_start, local_absence_request{{/str}}:</strong> {{startdate}}
                                    </div>
                                    <div class="mb-2">
                                        <strong>{{#str}}absence_end, local_absence_request{{/str}}:</strong> {{enddate}}
                                    </div>
                                    <div class="mb-2">
                                        <strong>{{#str}}
                                            duration, local_absence_request{{/str}}:</strong> {{duration}} {{#str}}
                                        days{{/str}}
                                    </div>
                                    <div class="mb-3">
                                        <small class="text-muted">{{#str}}
                                            submitted, local_absence_request{{/str}}: {{timecreated}}</small>
                                    </div>
                                </div>
                            </div>

                            <div class="courses-section">
                                <h6 class="mb-3">{{#str}}affected_courses, local_absence_request{{/str}}:</h6>
                                <div class="accordion" id="accordion-request-{{id}}">
                                    {{#courses}}
                                        <div class="card mb-2">
                                            <div class="card-header" id="heading-{{request_id}}-{{clean_id}}">
                                                <h6 class="mb-0">
                                                    <button class="btn btn-link collapsed course-accordion-btn"
                                                            type="button"
                                                            data-toggle="collapse"
                                                            data-target="#collapse-{{request_id}}-{{clean_id}}"
                                                            aria-expanded="false"
                                                            aria-controls="collapse-{{request_id}}-{{clean_id}}">
                                                        <i class="fa fa-chevron-right accordion-icon mr-2"></i>
                                                        <strong>{{fullname}}</strong>
                                                        <div class="course-info text-muted ml-2">
                                                            {{shortname}} {{#idnumber}}({{idnumber}}){{/idnumber}}
                                                        </div>
                                                    </button>
                                                </h6>
                                            </div>
                                            <div id="collapse-{{request_id}}-{{clean_id}}"
                                                 class="collapse"
                                                 aria-labelledby="heading-{{request_id}}-{{clean_id}}"
                                                 data-parent="#accordion-request-{{request_id}}">
                                                <div class="card-body">
                                                    <h6 class="mb-3">{{#str}}
                                                        notified_instructors, local_absence_request{{/str}}:</h6>
                                                    {{#teachers}}
                                                        <div class="teacher-info mb-2 p-2 bg-light rounded border">
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <div>
                                                                    <strong>{{firstname}} {{lastname}}</strong>
                                                                </div>
                                                                <div class="text-right">
                                                                        <span class="badge {{#acknowledged}}badge-success{{/acknowledged}}{{^acknowledged}}badge-warning{{/acknowledged}}">
                                                                            {{#acknowledged}}{{#str}}
                                                                                acknowledged, local_absence_request{{/str}}{{/acknowledged}}
                                                                            {{^acknowledged}}{{#str}}
                                                                                pending_acknowledgment, local_absence_request{{/str}}{{/acknowledged}}
                                                                        </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    {{/teachers}}
                                                    {{^teachers}}
                                                        <p class="text-muted">{{#str}}
                                                            no_instructors_notified, local_absence_request{{/str}}</p>
                                                    {{/teachers}}
                                                </div>
                                            </div>
                                        </div>
                                    {{/courses}}
                                </div>
                            </div>
                        </div>
                    {{/requests}}
                {{/has_requests}}
                {{^has_requests}}
                    <div class="alert alert-info">
                        <i class="fa fa-info-circle"></i>
                        {{#str}}no_absences_for_term, local_absence_request{{/str}}
                    </div>
                {{/has_requests}}
            </div>
        </div>
    {{/terms}}
{{/has_requests}}

{{^has_requests}}
    <div class="alert alert-info text-center">
        <h5><i class="fa fa-info-circle"></i> {{#str}}no_reported_absences, local_absence_request{{/str}}</h5>
        <p class="mb-3">{{#str}}no_absences_message, local_absence_request{{/str}}</p>
        <a href="{{config.wwwroot}}/local/absence_request/" class="btn btn-primary">
            {{#str}}report_new_absence, local_absence_request{{/str}}
        </a>
    </div>
{{/has_requests}}

<div class="row mt-4">
    <div class="col-12">
        <a href="{{config.wwwroot}}/local/absence_request/" class="btn btn-secondary">
            <i class="fa fa-plus"></i> {{#str}}report_new_absence, local_absence_request{{/str}}
        </a>
        <a href="{{config.wwwroot}}/my/" class="btn btn-outline-secondary ml-2">
            <i class="fa fa-home"></i> {{#str}}back_to_dashboard, local_absence_request{{/str}}
        </a>
    </div>
</div>

<style>
    .absence-request {
        transition: all 0.2s;
    }

    .absence-request:hover {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .teacher-info {
        font-size: 0.9em;
    }

    .badge-success {
        background-color: #28a745;
    }

    .badge-warning {
        background-color: #ffc107;
        color: #212529;
    }

    .course-accordion-btn {
        text-decoration: none !important;
        color: #333 !important;
        width: 100%;
        text-align: left;
        padding: 0.5rem 0;
    }

    .course-accordion-btn:hover {
        color: #007bff !important;
        text-decoration: none !important;
    }

    .course-accordion-btn:focus {
        box-shadow: none;
        outline: none;
    }

    .accordion-icon {
        transition: transform 0.2s;
        font-size: 0.8rem;
    }

    .course-accordion-btn[aria-expanded="true"] .accordion-icon {
        transform: rotate(90deg);
    }

    .course-info {
        display: inline-block;
        font-size: 0.9rem;
    }

    .accordion .card {
        border: 1px solid rgba(0, 0, 0, .125);
    }

    .accordion .card-header {
        padding: 0.5rem 1rem;
        background-color: #f8f9fa;
    }

    .accordion .card-body {
        padding: 1rem;
    }
</style>
