{{!
    Template for student absence report view
}}
<div class="row mb-4">
    <div class="col-12">
        <p class="accessible-muted">{{#str}}
            academic_year, local_absence_request{{/str}}: {{academic_year}} | {{#str}}
            student, local_absence_request{{/str}}: {{student_name}}</p>
    </div>
</div>

{{#has_requests}}
    {{#terms}}
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="mb-0">{{name}}</h3>
            </div>
            <div class="card-body">
                {{#has_requests}}
                    <div class="accordion" id="accordion-term-{{period}}">
                        {{#requests}}
                            <div class="card mb-3">
                                <div class="card-header" id="heading-request-{{id}}">
                                    <h5 class="mb-0">
                                        <button class="btn btn-link collapsed request-accordion-btn" type="button"
                                                data-toggle="collapse"
                                                data-target="#collapse-request-{{id}}"
                                                aria-expanded="false"
                                                aria-controls="collapse-request-{{id}}">
                                            <i class="fa fa-chevron-right accordion-icon mr-2"></i>
                                            <strong>{{#str}}reported_absence, local_absence_request{{/str}} #{{sequence_number}}</strong>
                                            <div class="request-summary accessible-muted ml-2">
                                                {{circumstance}} • {{startdate}} to {{enddate}} • {{duration}} {{#str}}days{{/str}}
                                            </div>
                                        </button>
                                    </h5>
                                </div>
                                <div id="collapse-request-{{id}}"
                                     class="collapse"
                                     aria-labelledby="heading-request-{{id}}"
                                     data-parent="#accordion-term-{{period}}">
                                    <div class="card-body">
                                        <div class="absence-request-details mb-3">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="mb-2">
                                                        <strong>{{#str}}circumstance, local_absence_request{{/str}}:</strong> {{circumstance}}
                                                    </div>
                                                    <div class="mb-2">
                                                        <strong>{{#str}}absence_start, local_absence_request{{/str}}:</strong> {{startdate}}
                                                    </div>
                                                    <div class="mb-2">
                                                        <strong>{{#str}}absence_end, local_absence_request{{/str}}:</strong> {{enddate}}
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="mb-2">
                                                        <strong>{{#str}}duration, local_absence_request{{/str}}:</strong> {{duration}} {{#str}}days{{/str}}
                                                    </div>
                                                    <div class="mb-2">
                                                        <small class="accessible-muted">{{#str}}submitted, local_absence_request{{/str}}: {{timecreated}}</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="courses-section">
                                            <h6 class="mb-3">{{#str}}affected_courses, local_absence_request{{/str}}:</h6>
                                            <div class="accordion" id="accordion-request-{{id}}">
                                                {{#courses}}
                                                    <div class="card mb-2">
                                                        <div class="card-header" id="heading-{{request_id}}-{{clean_id}}">
                                                            <h6 class="mb-0">
                                                                <button class="btn btn-link collapsed course-accordion-btn" type="button"
                                                                        data-toggle="collapse"
                                                                        data-target="#collapse-{{request_id}}-{{clean_id}}"
                                                                        aria-expanded="false"
                                                                        aria-controls="collapse-{{request_id}}-{{clean_id}}">
                                                                    <i class="fa fa-chevron-right accordion-icon mr-2"></i>
                                                                    <strong>{{fullname}}</strong>
                                                                    <div class="course-info accessible-muted ml-2">
                                                                        {{shortname}} {{#idnumber}}({{idnumber}}){{/idnumber}}
                                                                    </div>
                                                                </button>
                                                            </h6>
                                                        </div>
                                                        <div id="collapse-{{request_id}}-{{clean_id}}"
                                                             class="collapse"
                                                             aria-labelledby="heading-{{request_id}}-{{clean_id}}"
                                                             data-parent="#accordion-request-{{request_id}}">
                                                            <div class="card-body">
                                                                <h6 class="mb-3">{{#str}}notified_instructors, local_absence_request{{/str}}:</h6>
                                                                {{#teachers}}
                                                                    <div class="teacher-info mb-2 p-2 bg-light rounded border">
                                                                        <div class="d-flex justify-content-between align-items-center">
                                                                            <div>
                                                                                <strong>{{firstname}} {{lastname}}</strong>
                                                                            </div>
                                                                            <div class="text-right">
                                                                                <span class="badge {{#acknowledged}}badge-success{{/acknowledged}}{{^acknowledged}}badge-warning{{/acknowledged}}">
                                                                                    {{#acknowledged}}{{#str}}acknowledged, local_absence_request{{/str}}{{/acknowledged}}
                                                                                    {{^acknowledged}}{{#str}}pending_acknowledgment, local_absence_request{{/str}}{{/acknowledged}}
                                                                                </span>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                {{/teachers}}
                                                                {{^teachers}}
                                                                    <p class="accessible-muted">{{#str}}no_instructors_notified, local_absence_request{{/str}}</p>
                                                                {{/teachers}}
                                                            </div>
                                                        </div>
                                                    </div>
                                                {{/courses}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/requests}}
                    </div>
                {{/has_requests}}
                {{^has_requests}}
                    <div class="alert alert-info">
                        <i class="fa fa-info-circle"></i>
                        {{#str}}no_absences_for_term, local_absence_request{{/str}}
                    </div>
                {{/has_requests}}
            </div>
        </div>
    {{/terms}}
{{/has_requests}}

{{^has_requests}}
    <div class="alert alert-info text-center">
        <h5><i class="fa fa-info-circle"></i> {{#str}}no_reported_absences, local_absence_request{{/str}}</h5>
        <p class="mb-3">{{#str}}no_absences_message, local_absence_request{{/str}}</p>
        <a href="{{config.wwwroot}}/local/absence_request/" class="btn btn-primary">
            {{#str}}report_new_absence, local_absence_request{{/str}}
        </a>
    </div>
{{/has_requests}}

<div class="row mt-4">
    <div class="col-12">
        <a href="{{config.wwwroot}}/local/absence_request/index.php?courseid={{courseid}}" class="btn btn-secondary">
            <i class="fa fa-plus"></i> {{#str}}report_new_absence, local_absence_request{{/str}}
        </a>
        <a href="{{config.wwwroot}}/my/" class="btn btn-outline-secondary ml-2">
            <i class="fa fa-home"></i> {{#str}}back_to_dashboard, local_absence_request{{/str}}
        </a>
    </div>
</div>

<style>
    /* Accessible color for muted text - meets WCAG AA contrast requirements */
    .accessible-muted {
        color: #495057 !important;
    }

    .absence-request {
        transition: all 0.2s;
    }

    .absence-request:hover {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .teacher-info {
        font-size: 0.9em;
    }

    .badge-success {
        background-color: #28a745;
        color: #ffffff;
    }

    .badge-warning {
        background-color: #ffc107;
        color: #212529;
    }

    .request-accordion-btn {
        text-decoration: none !important;
        color: #212529 !important;
        width: 100%;
        text-align: left;
        padding: 0.75rem 0;
        font-size: 1rem;
    }

    .request-accordion-btn:hover {
        color: #0056b3 !important;
        text-decoration: none !important;
    }

    .request-accordion-btn:focus {
        box-shadow: none;
        outline: none;
    }

    .request-summary {
        display: block;
        font-size: 0.85rem;
        font-weight: normal;
        margin-top: 0.25rem;
        color: #495057 !important;
    }

    .course-accordion-btn {
        text-decoration: none !important;
        color: #212529 !important;
        width: 100%;
        text-align: left;
        padding: 0.5rem 0;
    }

    .course-accordion-btn:hover {
        color: #0056b3 !important;
        text-decoration: none !important;
    }

    .course-accordion-btn:focus {
        box-shadow: none;
        outline: none;
    }

    .accordion-icon {
        transition: transform 0.2s;
        font-size: 0.8rem;
        color: #495057;
    }

    .request-accordion-btn[aria-expanded="true"] .accordion-icon,
    .course-accordion-btn[aria-expanded="true"] .accordion-icon {
        transform: rotate(90deg);
    }

    .course-info {
        display: inline-block;
        font-size: 0.9rem;
        color: #495057 !important;
    }

    .absence-request-details {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 0.25rem;
        border: 1px solid #dee2e6;
    }

    .accordion .card {
        border: 1px solid rgba(0, 0, 0, .125);
    }

    .accordion .card-header {
        padding: 0.5rem 1rem;
        background-color: #f8f9fa;
    }

    .accordion .card-body {
        padding: 1rem;
    }

    .btn-primary {
        color: white !important;
    }

    .btn-primary:hover {
        color: white !important;
    }

    /* Ensure all text in cards has sufficient contrast */
    .card-body,
    .card-header {
        color: #212529;
    }

    /* Make sure small text is still accessible */
    small {
        color: #495057 !important;
    }
</style>
